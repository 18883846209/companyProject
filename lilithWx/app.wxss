.container {
  padding: 24.6rpx 0;
  box-sizing: border-box;
  height: auto;
  /* background-color: #2e2b3f; */
  background: url('../img/Lilith-bg.jpg') no-repeat;
  background-position: top;
  background-size: cover;
  color: #fff;
  font-family: -apple-system, "SF Pro SC", "HanHei SC", "SF Pro Text", "Myriad Set Pro", "SF Pro Icons", "Apple Legacy Chevron", "PingFang SC", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
} 
.top {
  /* width: calc(100vw - 20px);
  height: calc((100vw - 20px) * 0.30985915); */
  width: 710rpx;
  height: 220rpx;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  background: url('../img/Tarot-pic.jpg') no-repeat;
   background-position: 50% 50%; 
  background-size: cover;
  position: relative;
}
.top .img {
   width: 106rpx; 
   height: 192rpx;  
  /* width: calc(((100vw - 20px) * 0.30985915 - 18px) * 0.552);
